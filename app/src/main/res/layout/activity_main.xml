<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">


    <Button
        android:id="@+id/buttonInscrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:onClick="infoStudent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="75dp"

        />

    <Button
        android:id="@+id/buttonGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Grade"
        android:onClick="gradepr"
       app:layout_constraintTop_toBottomOf="@id/buttonInscrip"
        app:layout_constraintStart_toStartOf="@id/buttonInscrip"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="@id/buttonInscrip"
        />

    <Button
        android:id="@+id/buttonOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:onClick="endpro"
        app:layout_constraintTop_toBottomOf="@id/buttonGrade"
        app:layout_constraintStart_toStartOf="@id/buttonGrade"
        app:layout_constraintEnd_toEndOf="@id/buttonGrade"
        android:layout_marginTop="75dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>